# EXAMPLE Environment Variables
# Copy this to .env and replace with your actual values
# DO NOT PUT REAL KEYS IN THIS FILE!

# Local Development
DATABASE_LOCAL=sqlite://./blightstone.db
DATABASE=sqlite://./blightstone.db
DATABASE_PASSWORD=
PORT=8000

# Supabase Configuration (Local)
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your_local_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_local_service_key_here

# Production Supabase (replace with real values in .env)
SUPABASE_URL_PROD=your_production_supabase_url
SUPABASE_ANON_KEY_PROD=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY_PROD=your_production_service_key

# Resend Email Service (replace with real key in .env)
RESEND_API_KEY=your_resend_api_key_here

# Session Secret (generate a secure random string in .env)
SESSION_SECRET=your_super_secret_session_key_here

# App Configuration
APP_URL=http://localhost:8000
NODE_ENV=development
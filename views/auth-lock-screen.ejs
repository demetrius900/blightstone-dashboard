<script>
document.addEventListener('DOMContentLoaded', function() {
    // Load user data from localStorage or session
    loadUserData();
    
    // Handle form submission
    document.getElementById('lockForm').addEventListener('submit', handleUnlock);
});

function loadUserData() {
    // Try to get user data from localStorage
    // User data loaded from server
    
    if (currentUser.email) {
        document.getElementById('userEmail').textContent = currentUser.email;
        document.getElementById('userAvatar').src = `https://ui-avatars.com/api/?name=${encodeURIComponent(currentUser.name || currentUser.email)}&background=3b82f6&color=fff&size=32`;
    }
}

async function handleUnlock(e) {
    e.preventDefault();
    
    const password = document.getElementById('password').value;
    const errorDiv = document.getElementById('passwordError');
    const submitBtn = document.getElementById('unlockBtn');
    const btnText = document.getElementById('unlockBtnText');
    const spinner = document.getElementById('unlockSpinner');
    
    // Clear previous errors
    errorDiv.style.display = 'none';
    
    // Show loading state
    btnText.textContent = 'Unlocking...';
    spinner.classList.remove('d-none');
    submitBtn.disabled = true;
    
    try {
        // Validate password with server
        await new Promise(resolve => setTimeout(resolve, 1000));
        
        if (password.length < 1) {
            throw new Error('Please enter a password');
        }
        
        // Simple validation (in real app, this would be handled by Supabase)
        if (password.length < 6) {
            throw new Error('Password must be at least 6 characters');
        }
        
        // Success - redirect to dashboard
        window.location.href = '/';
        
    } catch (error) {
        // Show error
        errorDiv.textContent = error.message;
        errorDiv.style.display = 'block';
        
        // Reset button
        btnText.textContent = 'Unlock';
        spinner.classList.add('d-none');
        submitBtn.disabled = false;
        
        // Focus password field
        document.getElementById('password').focus();
    }
}

